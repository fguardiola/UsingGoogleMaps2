<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link href='http://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
          
            
             @*mod*@
            <div class="content-wrapper">
                <div class="float-left">
                    
                    @Html.Raw(@Html.ActionLink("[replacetext]", "About", "Home").ToHtmlString().Replace("[replacetext]", "<img src=\"/Content/images/logo8.png\" alt=\"PubDels\"> "))
                    @*<img src="/Content/images/logo7.png" alt="PubDels">*@
                </div>   
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                         
                            <li>@Html.ActionLink("Search a Deal", "SearchDeal", "PubDeals")</li>
                            <li>@Html.ActionLink("myPubDeals", "MyPubDeals", "PubDeals")</li>
                          
                            @*<li>@Html.ActionLink("Enter Area Coordinates", "EnterLatLongDUblinCoordinatesTable", "PubDeals")</li>*@
                           
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
